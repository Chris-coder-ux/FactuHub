{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/recurring-invoices",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/security-analysis",
      "schedule": "0 3 * * *"
    },
    {
