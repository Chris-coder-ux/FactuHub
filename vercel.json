      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/refresh-analytics-views",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/key-rotation",
      "schedule": "0 4 * * *"
    }
  ]
}
